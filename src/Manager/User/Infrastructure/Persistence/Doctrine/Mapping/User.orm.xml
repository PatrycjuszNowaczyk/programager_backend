<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Manager\User\Domain\User" table="users">

        <unique-constraints>
            <unique-constraint name="uniq_users_email" columns="email"/>
        </unique-constraints>

        <id name="id" column="id" type="vo_user_id" length="36">
            <generator strategy="NONE"/>
        </id>

        <!-- Embeddables -->
        <embedded
            name="email"
            class="App\Manager\User\Domain\ValueObject\VOEmail"
            use-column-prefix="false"
        />
        <embedded
            name="password_hash"
            class="App\Manager\User\Domain\ValueObject\VOPasswordHash"
            use-column-prefix="false"
        />

        <!-- Backed enum as string with enum-type -->
        <field
            name="role"
            column="role"
            type="string"
            enum-type="App\Manager\User\Domain\Enums\Role"
            length="20"
            nullable="false"
            column-definition="ENUM('admin','user') DEFAULT 'user'"
        />

        <field name="created_at" column="created_at" type="datetime_immutable" nullable="false"/>
    </entity>
</doctrine-mapping>
